<%- include('./../inc/head') -%>
        <div class="page-content--bge5">
            <div class="container">
                <div class="login-wrap">
                    <div class="login-content">
                        <div class="login-logo">
                            <a href="/">
                                <!-- <img src="/images/icon/logo.png" alt="CoolAdmin"> -->
                                <h1>SPREAD</h1>
                            </a>
                        </div>
                        <%- include('./../inc/assets/alert-error') -%>
                        <%- include('./../inc/assets/alert-success') -%> 
                        <div class="login-form">
                            <form action="/users/register" method="POST">
                                <div class="form-group">
                                    <label>Nome completo</label>
                                    <input class="au-input au-input--full" type="text" name="name" placeholder="Nome completo" value="<%=body.name%>">
                                </div>
                                <div class="form-group">
                                    <label>Email</label>
                                    <input class="au-input au-input--full" type="email" name="email" placeholder="Email" value="<%=body.email%>">
                                </div>
                                <div class="form-group">
                                    <label>Número de Telefone</label>
                                    <input class="au-input au-input--full" type="number" name="phone" placeholder="Número de telefone" value="<%=body.phone%>">
                                </div>
                                <div class="form-group">
                                    <label>Senha</label>
                                    <input class="au-input au-input--full" type="password" name="password" placeholder="Password">
                                </div>
                                <button class="au-btn au-btn--block au-btn--blue m-b-20" type="submit">Criar conta</button>
                            </form>
                            <div class="register-link" style="display: block;">
                                <p>
                                    Aceder minha conta!
                                    <a href="/users/login">Login</a>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
<%- include('./../inc/footer') -%>