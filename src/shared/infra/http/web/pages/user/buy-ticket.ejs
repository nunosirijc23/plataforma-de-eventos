<%- include('./../inc/shared/head') -%>
        <!-- MENU SIDEBAR-->
        <aside class="menu-sidebar2">
            <div class="logo">
                <a href="/users/events">
                    <!-- <img src="/images/icon/logo-white.png" alt="Cool Admin" /> -->
                    <h1 style="color: #FFF;">SPREAD</h1>
                </a>
            </div>
            <div class="menu-sidebar2__content js-scrollbar1">
                <div class="account2">
                    <div class="image img-cir img-120">
                        <img src="/images/<%= user.photo %>" alt="<%= user.name %>" />
                    </div>
                    <h4 class="name"><%= user.name %></h4>
                    <a href="/users/logout">Sair</a>
                </div>
                <nav class="navbar-sidebar2">
                    <ul class="list-unstyled navbar__list">
                        <li class="active">
                            <a class="js-arrow" href="/users/events">
                                <i class="fas fa-chevron-left"></i>Voltar
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </aside>
        <!-- END MENU SIDEBAR-->

        <!-- PAGE CONTAINER-->
        <div class="page-container">
            <!-- HEADER DESKTOP-->
            <header class="header-desktop2">
                <div class="section__content section__content--p30">
                    <div class="container-fluid">
                        <div class="header-wrap2">
                            <div class="logo d-block d-lg-none">
                                <a href="/users/events">
                                    <!-- <img src="/images/icon/logo-white.png" alt="CoolAdmin" /> -->
                                    <h1 style="color: #FFF;">SPREAD</h1>
                                </a>
                            </div>
                            <div class="header-button2">
                                <div class="header-button-item mr-0 js-sidebar-btn">
                                    <i class="zmdi zmdi-menu"></i>
                                </div>
                                <div class="setting-menu js-right-sidebar d-none d-lg-block">
                                    <div class="account-dropdown__body">
                                        <div class="account-dropdown__item">
                                            <a href="#">
                                                <i class="zmdi zmdi-account"></i>Meus dados</a>
                                        </div>
                                        <div class="account-dropdown__item">
                                            <a href="#">
                                                <i class="zmdi zmdi-settings"></i>Alterar foto</a>
                                        </div>
                                        <div class="account-dropdown__item">
                                            <a href="#">
                                                <i class="zmdi zmdi-money-box"></i>Alterar senha</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </header>
            <aside class="menu-sidebar2 js-right-sidebar d-block d-lg-none">
                <div class="logo">
                    <a href="/users/events">
                        <!-- <img src="/images/icon/logo-white.png" alt="Cool Admin" /> -->
                        <h1 style="color: #FFF;">SPREAD</h1>
                    </a>
                </div>
                <div class="menu-sidebar2__content js-scrollbar2">
                    <div class="account2">
                        <div class="image img-cir img-120">
                            <img src="/images/<%= user.photo %>" alt="<%= user.name %>"/>
                        </div>
                        <h4 class="name"><%= user.name %></h4>
                        <a href="/users/logout">Sair</a>
                    </div>
                    <nav class="navbar-sidebar2">
                        <ul class="list-unstyled navbar__list">
                            <li class="active">
                                <a class="js-arrow" href="/users/events">
                                    <i class="fas fa-chevron-left"></i>Voltar
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </aside>
            <!-- END HEADER DESKTOP-->

            <%- include('../inc/user/page-title') -%>

            <section class="statistic">
                <div class="section__content section__content--p30">
                    <div class="container-fluid">
                        <div class="row"
                            style="background-color: #F5F5F5; padding: 10px; margin-bottom: 15px; height: 420px;">
                            <div class="container">
                                <div class="row">
                                    <div class="col-lg-4" style="height: 300px; width: 100px;">
                                        <div class="container">
                                            <div class="row margin-bottom-row">
                                                <div class="col-lg-12">
                                                    <img src="/images/<%= event.photo %>" class="img-fluid" alt="<%= event.name %>"
                                                        style="height: 100%; width: 100%;"> 
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-8" style="width: 100%; height: 100%;">
                                        <div class="container">
                                            <div class="row margin-bottom-row">
                                                <div class="col-lg-12">
                                                    <h2><%= event.name %></h2>
                                                </div>
                                            </div>
                                            <div class="row margin-bottom-row">
                                                <div class="col-lg-6">
                                                    <p>
                                                    <% let startTime = event.startTime.split(":")[0] + ":" + event.startTime.split(":")[1]%> 
                                                    <% let endTime = event.endTime.split(":")[0] + ":" + event.endTime.split(":")[1]%> 
                                                    <h5>Data e hora:</h5> <%= event.date %> das <%= startTime %> às <%= endTime %> 
                                                    </p>
                                                </div>
                                                <div class="col-lg-6">
                                                    <p>
                                                    <h5>Bilhetes comprados:</h5> <%= totalTicketBought %>/<%= event.capacity %>
                                                    </p>
                                                </div>
                                            </div>
                                            <div class="row margin-bottom-row">
                                                <div class="col-lg-6">
                                                    <p>
                                                    <h5>Categoria:</h5> <%= event.category.name %>
                                                    </p>
                                                </div>
                                                <div class="col-lg-6">
                                                    <p>
                                                    <h5>Bilhetes preço:</h5> <% if (event.price === 0) { %> Grátis <% } else { %>  <%= event.price %> Akz <% } %>
                                                    </p>
                                                </div>
                                            </div>
                                            <div class="row margin-bottom-row">
                                                <div class="col-lg-6">
                                                    <p>
                                                    <h5>Província:</h5> <%= event.province %>
                                                    </p>
                                                </div>
                                                <div class="col-lg-6">
                                                    <p>
                                                    <h5>Munícipio:</h5> <%= event.county %>
                                                    </p>
                                                </div>
                                            </div>
                                            <div class="row margin-bottom-row">
                                                <div class="col-lg-12">
                                                    <p>
                                                        <h5>Descrição</h5>
                                                    </p>
                                                    <p><%= event.description %></p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-12">
                                        <a id="payment-button" class="btn btn-lg btn-primary btn-block" style="color: #FFFFFF;" data-toggle="modal" data-target="#buyTicketModal">
                                            <i class="fa fa-usd" aria-hidden="true"></i>&nbsp;Comprar bilhete
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <!-- END PAGE CONTAINER-->
        </div>

        <div class="modal fade" id="buyTicketModal" tabindex="-1" role="dialog" aria-labelledby="mediumModalLabel"
        aria-hidden="true">
            <div class="modal-dialog modal-lg" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="mediumModalLabel">Comprar Bilhete</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <form id="buyTicketForm">
                            <div class="container-fluid">
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="container">
                                            <div class="row">
                                                <input name="eventId" type="hidden" value="<%= event.id %>">
                                                <input name="userId" type="hidden" value="<%= user.id %>">
                                                <div class="form-group col-sm-4">
                                                    <label for="cc-payment" class="control-label mb-1">
                                                        Comprovativo de pagamento
                                                    </label>
                                                    <input type="file" name="bankReceipt"/>
                                                </div>
                                                <div class="form-group col-sm-4">
                                                    <label for="cc-payment" class="control-label mb-1">Observação</label>
                                                    <textarea name="payment" type="text" row="5"
                                                    class="form-control-sm form-control"></textarea>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-12">
                                        <div>
                                            <button id="payment-button" type="submit"
                                                class="btn btn-lg btn-info btn-block">
                                                <span id="payment-button-amount">Enviar</span>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
            </div>
        </div>
        </div>
<%- include('./../inc/shared/footer') -%>
<script src="/js/buy-ticket.js"></script>