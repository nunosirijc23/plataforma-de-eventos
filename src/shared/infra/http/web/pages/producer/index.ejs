<%- include('./../inc/shared/head') -%>
    <%- include('./../inc/producer/aside') -%>
        <!-- PAGE CONTAINER-->
        <div class="page-container">
            <%- include('../inc/producer/navbar') -%>

            <!-- MAIN CONTENT-->
            <div class="main-content">
                <div class="section__content section__content--p30">
                    <div class="container-fluid">
                        <div class="row m-t-25">
                            <div class="col-sm-6 col-lg-4">
                                <div class="overview-item overview-item--c1">
                                    <div class="overview__inner">
                                        <div class="overview-box clearfix">
                                            <div class="icon">
                                                <i class="far fa-calendar-alt"></i>
                                            </div>
                                            <div class="text margin-dash">
                                                <h2><%= eventsDashboard.all %></h2>
                                                <span>Eventos criados</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-6 col-lg-4">
                                <div class="overview-item overview-item--c2">
                                    <div class="overview__inner">
                                        <div class="overview-box clearfix">
                                            <div class="icon">
                                                <i class="far fa-calendar-check"></i>
                                            </div>
                                            <div class="text margin-dash">
                                                <h2><%= eventsDashboard.done %></h2>
                                                <span>Eventos Realizados</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-6 col-lg-4">
                                <div class="overview-item overview-item--c4">
                                    <div class="overview__inner">
                                        <div class="overview-box clearfix">
                                            <div class="icon">
                                                <i class="far fa-calendar-check"></i>
                                            </div>
                                            <div class="text margin-dash">
                                                <h2><%= eventsDashboard.pending %></h2>
                                                <span>Eventos pendentes</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <h4 class="title-1 m-b-25">Eventos recentemente criados</h4>
                                <div class="table-responsive table-responsive-data2 m-b-40">
                                    <table class="table table-data2">
                                        <thead>
                                            <tr>
                                                <th></th>
                                                <th>nome</th>
                                                <th>data</th>
                                                <th>Horário</th>
                                                <th>Categoria</th>
                                                <th>status</th>
                                                <th>Total de Bilhetes</th>
                                                <th>Bilhete Preço</th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% if (events.length <= 0) { %> 
                                            <tr class="tr-shadow">
                                                <td>Nenhum evento encontrado.</td>
                                            </tr>
                                            <% } else { %>
                                                    <tr class="tr-shadow">
                                                        <td>
                                                            <div class="image img-40">
                                                                <img src="/images/<%= events[0].photo %>" alt="<%= events[0].name %>" />
                                                            </div>
                                                        </td>
                                                        <td><a href="/producers/event/<%= events[0].id %>"><%= events[0].name %></a></td>
                                                        <td><%= events[0].date %></td>
                                                        <% let startTime = events[0].startTime.split(":")[0] + ":" + events[0].startTime.split(":")[1]%> 
                                                        <% let endTime = events[0].endTime.split(":")[0] + ":" + events[0].endTime.split(":")[1]%> 
                                                        <td><%= startTime %> às <%= endTime %></td>
                                                        <td><%= events[0].category.name %></td>
                                                        <td>
                                                            <% let dateNow = new Date().getTime(); let eventDate = new Date(events[0].date).getTime() %> 
                                                            <% if ( dateNow < eventDate ) { %> 
                                                            <span class="role user">Pendente</span>
                                                            <% } else { %>
                                                            <span class="role member">Realizado</span>
                                                            <% } %> 
                                                        </td>
                                                        <td><%= events[0].capacity %></td>
                                                        <td><% if (events[0].price === 0) { %> Grátis <% } else { %>  <%= events[0].price %> Akz <% } %></td>
                                                    </tr>
                                                    <tr class="spacer"></tr>
                                                    <tr class="tr-shadow">
                                                        <td>
                                                            <div class="image img-40">
                                                                <img src="/images/<%= events[1].photo %>" alt="<%= events[1].name %>" />
                                                            </div>
                                                        </td>
                                                        <td><a href="/producers/event/<%= events[1].id %>"><%= events[1].name %></a></td>
                                                        <td><%= events[1].date %></td>
                                                        <% startTime = events[1].startTime.split(":")[0] + ":" + events[1].startTime.split(":")[1]%> 
                                                        <% endTime = events[1].endTime.split(":")[0] + ":" + events[1].endTime.split(":")[1]%> 
                                                        <td><%= startTime %> às <%= endTime %></td>
                                                        <td><%= events[1].category.name %></td>
                                                        <td>
                                                            <% dateNow = new Date().getTime(); eventDate = new Date(events[1].date).getTime() %> 
                                                            <% if ( dateNow < eventDate ) { %> 
                                                            <span class="role user">Pendente</span>
                                                            <% } else { %>
                                                            <span class="role member">Realizado</span>
                                                            <% } %> 
                                                        </td>
                                                        <td><%= events[1].capacity %></td>
                                                        <td><% if (events[1].price === 0) { %> Grátis <% } else { %>  <%= events[1].price %> Akz <% } %></td>
                                                    </tr>
                                            <% } %>  
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- END MAIN CONTENT-->
            <!-- END PAGE CONTAINER-->
        </div>
<%- include('./../inc/shared/footer') -%>